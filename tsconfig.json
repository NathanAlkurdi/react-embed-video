{
    "include": ["src"],
    "exclude": [
      "dist",
      "node_modules",
      "*.test.tsx",
      "*.test.ts"
    ],
    "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext"],
      "emitDeclarationOnly": true,
      "importHelpers": true,
      "declaration": true,
      "sourceMap": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
    }
  }